{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "addLabels": ["chore", "dependencies"],
  "automerge": true,
  "automergeStrategy": "squash",
  "branchTopic": "all",
  "commitMessageAction": "update",
  "commitMessageExtra": "",
  "commitMessageTopic": "dependencies",
  "configMigration": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":enablePreCommit",
    "schedule:automergeEarlyMondays"
  ],
  "github-actions": {
    "branchTopic": "all",
    "enabled": true,
    "managerFilePatterns": [
      "(^|/)(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$",
      "(^|/)action\\.ya?ml$"
    ],
    "packageRules": [
      {
        "matchPackageNames": [
          "*",
          "!/ansible/team-devtools/",
          "!/Actions-R-Us/actions-tagger/"
        ]
      }
    ]
  },
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "addLabels": ["{{{ manager }}}"],
    "commitMessageAction": "update",
    "commitMessageExtra": "{{{ manager }}}",
    "enabled": true,
    "groupName": "all dependencies",
    "groupSlug": "all",
    "rangeStrategy": "replace",
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "always"
  },
  "minimumReleaseAge": "2 days",
  "packageRules": [
    {
      "branchTopic": "all",
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "7 days"
    },
    {
      "branchTopic": "all",
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ],
  "pin": {
    "branchTopic": "all",
    "groupName": "all dependencies",
    "groupSlug": "all"
  },
  "pinDigest": {
    "branchTopic": "all",
    "groupName": "all dependencies",
    "groupSlug": "all"
  },
  "prConcurrentLimit": 1,
  "rangeStrategy": "update-lockfile",
  "recreateWhen": "always",
  "schedule": ["before 4am on monday"],
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "timezone": "UTC"
}
